<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/helveticabold"
            android:paddingVertical="10dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/box_gris" />

            <ImageView

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitStart"
                android:src="@drawable/masques_dashboard_a" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitStart"
                android:src="@drawable/masques_dashboard_b" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/helvneueblack"
                android:paddingTop="5dp"
                android:text="MOBIBLANC"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@id/name"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/name"
                android:src="@drawable/icone_entreprise" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/name"
                android:layout_alignTop="@id/number"
                android:layout_alignBottom="@id/number"
                android:fontFamily="@font/helvneueblack"
                android:gravity="center_vertical"
                android:text="Points de fidélité :"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/subtitle"
                android:fontFamily="@font/helvneueblack"
                android:text="43 605"
                android:textColor="@color/orange"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboard_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.8"
        tools:itemCount="5"
        tools:listitem="@layout/dashboard_item_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>