<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:filterTouchesWhenObscured="true"
    tools:context=".views.authentication.fragments.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_185sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@color/black"
                        android:fontFamily="@font/helveticabold"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="34dp"
                        android:layout_height="31dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/selector_back_button" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/box_gris" />

                    <ImageView
                        android:id="@+id/background1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/masques_dashboard_a" />

                    <ImageView
                        android:id="@+id/background2"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/masques_dashboard_b" />

                    <RelativeLayout
                        android:id="@+id/user_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:visibility="visible">


                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="@dimen/_53sdp"
                            android:layout_height="@dimen/_53sdp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/tel" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/logo"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/num_ligne_p"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/helvneueblack"
                                android:paddingTop="@dimen/_3sdp"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="NÂ° de la ligne :" />

                            <TextView
                                android:id="@+id/num_ligne_"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/helvneueblack"
                                android:paddingTop="@dimen/_3sdp"
                                android:textColor="@color/orange"
                                android:textSize="18sp"
                                tools:text="0679361833 :" />
                        </LinearLayout>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/forfait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_info_layout"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/helvneueblack"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="Forfait" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                >
            <TextView
                android:id="@+id/status_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvneueblack"
                android:paddingTop="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Etat de la ligne :"
                android:layout_margin="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/status_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/active"
                    android:layout_toEndOf="@+id/status_p"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="15dp"
                    />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticalight"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Active"
                    android:layout_toEndOf="@+id/status_img"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="15dp"
                    android:layout_centerVertical="true"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    android:layout_below="@+id/status"
                    android:layout_marginHorizontal="15dp"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_codepuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_status"
                >
                <TextView
                    android:id="@+id/code_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvneueblack"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Votre code PUK :"
                    android:layout_margin="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>



                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvneueblack"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    tools:text="78965433"
                    android:layout_toEndOf="@+id/code_p"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="15dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_share_button"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/black"
                android:fontFamily="@font/helveticaneueregular"
                android:gravity="start|center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@+id/rl_codepuk"
                android:paddingHorizontal="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                tools:itemCount="4"
                tools:listitem="@layout/solde_item"
                android:layout_below="@+id/date"/>

        </RelativeLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loader"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/loader"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>
