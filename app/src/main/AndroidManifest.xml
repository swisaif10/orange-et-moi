<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orange.orangeetmoipro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".OrangeEtMoiPro"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_traffic_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.authentication.AuthenticationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.selectlanguage.SelectLanguageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>